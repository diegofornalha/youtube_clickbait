{
  "name": "auto_approval",
  "description": "Auto-aprovação de tools seguras para sistema autônomo",
  "version": "1.0.0",
  "hooks": {
    "PreToolUse": {
      "auto_approve_tools": [
        "Read",
        "Grep",
        "Glob",
        "Bash"
      ],
      "block_tools": [],
      "protected_paths": [
        "/.env",
        "/secrets",
        "/credentials"
      ],
      "safe_bash_commands": [
        "ls",
        "cat",
        "grep",
        "find",
        "echo",
        "pwd"
      ],
      "dangerous_bash_patterns": [
        "rm -rf /",
        "dd if=",
        "> /dev/",
        "mkfs",
        "format"
      ]
    },
    "PostToolUse": {
      "log_operations": true,
      "register_in_neo4j": true,
      "collect_metrics": true
    },
    "Stop": {
      "auto_cleanup": true,
      "save_metrics": true,
      "final_report": true
    }
  }
}
